{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "generator": "Visual Studio 17 2022",
            "architecture": "x64"
        },
        {
            "name": "windows-base-ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "generator": "Ninja"
        },
        {
            "name": "debug",
            "displayName": "Debug (Visual Studio)",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "LUCENT_ENABLE_VALIDATION": "ON"
            }
        },
        {
            "name": "debug-ninja",
            "displayName": "Debug (Ninja)",
            "inherits": "windows-base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "LUCENT_ENABLE_VALIDATION": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release (Visual Studio)",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "LUCENT_ENABLE_VALIDATION": "OFF"
            }
        },
        {
            "name": "release-ninja",
            "displayName": "Release (Ninja)",
            "inherits": "windows-base-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "LUCENT_ENABLE_VALIDATION": "OFF"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Release with Debug Info",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "LUCENT_ENABLE_VALIDATION": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "debug-ninja",
            "configurePreset": "debug-ninja"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "release-ninja",
            "configurePreset": "release-ninja"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo",
            "configuration": "RelWithDebInfo"
        }
    ]
}

